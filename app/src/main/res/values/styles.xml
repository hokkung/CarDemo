<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- v21 styles, you can merge these two if your minSdkVersion is >= 21, -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>

    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/colorWhite</item>
        <item name="background">@color/colorWhite</item>

    </style>
    
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorWhite</item>
    </style>


    <style name="TitileNameShopCard">
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <style name="DescriptionShopCard">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="StatusShopCard">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


</resources>
